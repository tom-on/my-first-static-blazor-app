{
  "routes": [
    {
      "route": "/profile",
      "allowedRoles": [ "authenticated" ]
    },
    {
      "route": "/admin/*",
      "allowedRoles": [ "administrator" ]
    },
    {
      "route": "/api/*",
      "methods": [ "PUT", "POST", "PATCH", "DELETE" ],
      "allowedRoles": [ "contributor" ]
    }
  ],

  "responseOverrides": {
    "400": {
      "rewrite": "/invalid-invitation-error.html"
    },
    "401": {
      "redirect": "/login",
      "statusCode": 302
    },
    "403": {
      "rewrite": "/custom-forbidden-page.html"
    },
    "404": {
      "rewrite": "/404.html"
    }
  },

  "navigationFallback": {
    "rewrite": "/index.html"
  } 
}