@page "/login/"
@page "/login/{backPage}"
@inject NavigationManager navigator
<PageTitle>Login or not</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraSmall" Class="mt-6">
    <LoginProviders PostLoginUrl=@BackUrl />
</MudContainer>

@code {

    [Parameter]
    public string BackPage { get; set; }
    
    private string BackUrl => navigator.ToAbsoluteUri(BackPage).AbsoluteUri;

}
