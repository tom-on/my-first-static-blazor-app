@inherits LayoutComponentBase
@inject NavigationManager NavManager


<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />



<MudLayout>
    <MudAppBar Elevation="1">
        <AuthorizeView>
            <Authorized>
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            </Authorized>
        </AuthorizeView>
        <MudText Typo="Typo.h5" Class="ml-3">NiePolecamTego.pl</MudText>
        <MudSpacer />        
        <LogInStatus LogInUrl=@($"/login/{NavManager.ToBaseRelativePath(NavManager.Uri)}") LogOutUrl=@($"/.auth/logout?post_logout_redirect_uri={NavManager.ToBaseRelativePath(NavManager.Uri)}")/>
    </MudAppBar>

    <AuthorizeView>
        <Authorized>
            <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
                <NavMenu />
            </MudDrawer>
        </Authorized>
    </AuthorizeView>

    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
} 