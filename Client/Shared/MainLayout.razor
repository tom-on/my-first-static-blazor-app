@inherits LayoutComponentBase
@inject NavigationManager NavManager

<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <div class="top-row px-4">
        <AuthorizeView>
            <Authorized>
                Hello, @context.User.Identity.Name!
                <a href="/.auth/logout?post_logout_redirect_uri=@NavManager.Uri">Log out</a>
            </Authorized>
            <NotAuthorized>
                <a href="/login/@NavManager.ToBaseRelativePath(NavManager.Uri)">Log in</a>
            </NotAuthorized>
        </AuthorizeView>
    </div>

    <div class="content px-4">
        @Body
    </div>
</div>
