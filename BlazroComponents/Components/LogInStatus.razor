@inject NavigationManager _nav
@inject IStringLocalizer<LogInStatus> _loc
 
<AuthorizeView>
            <Authorized>
                @_loc["Hello"] @context.User.Identity.Name 
                <MudButton Variant="Variant.Filled"
                    EndIcon="@Icons.Material.Filled.Logout"
                    Color="Color.Primary"
                    OnClick=LogOut>
                    @_loc["Log out"]
                 </MudButton>
            </Authorized>
            <NotAuthorized> 
                <MudButton Link=@LogInUrl
                    Variant="Variant.Filled"
                    EndIcon="@Icons.Material.Filled.Logout"
                    Color="Color.Primary">
                    @_loc["Log in"]
                 </MudButton>
            </NotAuthorized>
</AuthorizeView>

@code {

    [Parameter]
    public string LogInUrl { get; set; }

    [Parameter]
    public string LogOutUrl { get; set; }

    private void LogOut() => _nav.NavigateTo(LogOutUrl, forceLoad: true);



}
