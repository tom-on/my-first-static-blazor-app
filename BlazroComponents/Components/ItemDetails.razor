@inject NavigationManager _nav
    <MudCard Class="mud-width-full">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">@Item.Name</MudText>
            </CardHeaderContent>
            <CardHeaderActions> 
                <MudMenu Icon="@Icons.Material.Filled.MoreVert" @onclick:stopPropagation=true>
                    <MudMenuItem>Profile</MudMenuItem>
                    <MudMenuItem>My account</MudMenuItem>
                    <MudMenuItem>Logout</MudMenuItem>
                </MudMenu>
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardMedia Image="https://lorempixel.com/400/200/" />
        <MudCardContent>
            <MudText>@Item.Description</MudText>        
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary">Dodaj negatywa</MudButton>
        </MudCardActions>
    </MudCard>
@code {
    
    [Parameter]
    public FeedItemVm Item { get; set; } = new FeedItemVm("1","Item title","Item description which can be here realllly loong and it should still fit on the page");

    [Parameter]
    public string DetailsUrl { get; set; } 
}
